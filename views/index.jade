script(type='text/javascript', src='/js/index-sio.js')

h1= title
p Welcome to #{title} service!

#auctions
	table.table
		tr
			th Item name
			th Start price
			th Current price
			th Bids
		each item in items
			tr
				td
					a(href="/item/"+item.id)= item.title
				td= item.price+" zł"
				td
					span(id='price-'+item.id) #{item.current}
					|  zł
				td
					span(id='count-'+item.id) #{item.bids.length}




